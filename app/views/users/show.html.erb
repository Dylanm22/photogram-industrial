<% current_user.own_photos.each do |photo| %>
<div class ="row">
<div class="col-md-6 offset-md-3">

<div class="card m-4" >
   <%= image_tag photo.image, class: "card-img-top" %>

  <div class="card-body">
    <h4 class="card-title"><%= photo.owner.username %></h4>
    <p class="card-text"><%= photo.caption %></p>
  </div>
  <ul class="list-group list-group-flush">
     <% photo.comments.each do |comment|%>
   
    <li class="list-group-item">
    
    <div class="media">
  
    <div class = "media-body">
    <img src="." class ="mr-3" alt="..">
    <h6 class="mt-0"><%= comment.author.username %></h6>
    <p>
    <%=  comment.body %>
    </p>
    </li>
     <% end%>
    
  </ul>
  <div class="card-body">
    <%= render "comments/form", comment: Comment.new(photo_id: photo.id) %>
  </div>
</div>

</div>
</div>

<%end %>
