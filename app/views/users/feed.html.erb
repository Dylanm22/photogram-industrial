<div class="row">
 <div class="col-md-6 offset-md-3">

<h1>Feed</h1>

<p class="lead text-muted"> posted by people you follow</p>
<ul class="nav nav-pills nav-fill">
  <li class="nav-item">
    <%= link_to "Post", user_path(@user.username), class: "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to "Likes", liked_path(@user.username), class: "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to "Feed", feed_path(@user.username), class: "nav-link active" %>
  </li>
  </li>
     <li class="nav-item">
<%= link_to "Followers", followers_path(@user.username), class: "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to "Following", following_path(@user.username), class: "nav-link" %>
  </li>
</ul>

<div>
</div>



</div>
</div>

<% @user.feed.each do |photo| %>
<div class ="row">
<div class="col-md-6 offset-md-3">

<div class="card m-4" >
     <div class="card-header">
      <%= link_to "#{photo.owner.username}", user_path(photo.owner.username) %>
      </div>
   <%= image_tag photo.image, class: "card-img-top" %>

  <div class="card-body">
   
    <p class="card-text"><%= photo.caption %></p>
  </div>
  <ul class="list-group list-group-flush">
     <% photo.comments.each do |comment|%>
   
    <li class="list-group-item">
    
    <div class="media">
  
    <div class = "media-body">
    <img src="." class ="mr-3" alt="..">
    <h6 class="mt-0"><%= comment.author.username %></h6>
    <p>
    <%=  comment.body %>
    </p>
    </li>
     <% end%>
    
  </ul>
  <div class="card-body">
    <%= render "comments/form", comment: Comment.new(photo_id: photo.id) %>
  </div>
</div>

</div>
</div>

<%end %>
